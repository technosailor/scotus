            "text_blocks": [
              {
                "byte_start": 2875643,
                "start": 693.034,
                "byte_stop": 2896541,
                "text": "Labor Board orders, Your Honor has been enforced exclusively to the contempt process.",
                "stop": 698.274
              }
            ]
          },
          {
            "byte_stop": 2907408,
            "speaker": {
              "view_count": 0,
              "length_of_service": 1832,
              "thumbnail": {
