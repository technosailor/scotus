              "ID": 15099,
              "identifier": "earl_warren",
              "name": "Earl Warren",
              "last_name": "Warren",
              "roles": [
                {
                  "institution_name": "Supreme Court of the United States",
                  "role_title": "Chief Justice of the United States",
                  "date_end": -16570800,
                  "date_start": -512503200,
                  "id": 2743,
