            "byte_stop": 2313718,
            "stop": 559.212,
            "text_blocks": [
              {
                "stop": 558.26,
                "text": "I think so.",
                "byte_stop": 2309851,
                "byte_start": 2306926,
                "start": 557.517
              },
              {
                "stop": 559.212,
                "text": "I should ask.",
