            "stop": 557.517,
            "text_blocks": [
              {
                "stop": 557.517,
                "text": "Is he subject to Federal Income Tax?",
                "byte_stop": 2306926,
                "byte_start": 2298358,
                "start": 555.367
              }
            ],
            "start": 555.367
          },
          {
            "speaker": {
              "roles": null,
              "view_count": 0,
